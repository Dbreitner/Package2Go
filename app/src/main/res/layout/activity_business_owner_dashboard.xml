<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".BusinessOwner.BusinessOwnerDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">



            <Button
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:onClick="SendPackageBtn"
                android:padding="20dp"
                android:text="LOGOUT"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:onClick="SendPackageBtn"
                android:padding="20dp"
                android:text="Go to profile"
                android:textColor="@color/black"/>



        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="30sp"
            android:fontFamily="@font/muli_black"
            android:textColor="@color/black"
            android:padding="10dp">


        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="#E53935"
            android:elevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send a package"
                android:textSize="30sp"
                android:fontFamily="@font/muli_bold"
                android:textColor="@color/white"
                android:padding="25dp"/>

            <Button
                android:id="@+id/send_pkg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:onClick="SendPackageBtn"
                android:padding="20dp"
                android:text="Have a driver deliver a \n package across town"
                android:textColor="#FFFFFF"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/send_package"
                android:layout_alignParentRight="true"
                android:layout_marginTop="55dp"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@color/black"
            android:elevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="30sp"
                android:fontFamily="@font/muli_bold"
                android:textColor="@color/white"
                android:padding="25dp"/>

            <Button
                android:id="@+id/completed_del_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Completed Deliveries"
                android:background="#00000000"
                android:padding="20dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/complete_deliveries"
                android:layout_alignParentRight="true"
                android:layout_marginTop="55dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="#E53935"
            android:elevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule delivery"
                android:textSize="30sp"
                android:fontFamily="@font/muli_bold"
                android:textColor="@color/white"
                android:padding="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:text="Schedule to send a delivery\n in advance"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/schedule_package"
                android:layout_alignParentRight="true"
                android:layout_marginTop="55dp"/>



        </RelativeLayout>








    </LinearLayout>


</ScrollView>